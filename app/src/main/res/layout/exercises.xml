<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.antoniogoncalves.materialdesignworkout.Exercises">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/toolBarTheme" />

    <EditText
        android:id="@+id/exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Exercise Name"
        android:textSize="36sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Reps"
        android:textColor="#000000"
        android:textSize="30sp" />
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/media_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/less_sets"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_minus"
            android:onClick="subtractSets"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/number_of_sets"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:text="0"
            android:textSize="52sp"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/more_sets"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add"
            android:onClick="addSets"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Reps"
        android:textColor="#000000"
        android:textSize="30sp" />
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/media_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        >

        <ImageButton
            android:id="@+id/less_reps"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/rounded_corner"
            android:onClick="subtractReps"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_minus"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/number_of_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="0"
            android:textSize="52sp"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/more_reps"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/rounded_corner"
            android:onClick="addReps"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Weight"
        android:textColor="#000000"
        android:textSize="30sp" />
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/media_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        >

        <ImageButton
            android:id="@+id/less_weight"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/rounded_corner"
            android:onClick="subtractWeight"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_minus"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="0"
            android:textSize="52sp"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/more_weight"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/rounded_corner"
            android:onClick="addWeight"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
